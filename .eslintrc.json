{
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "extends": "airbnb-base",
  "parser": "typescript-eslint-parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2017
  },
  "overrides": [
    {
      "files": [
        "**/*.ts"
      ],
      "parser": "typescript-eslint-parser",
      "rules": {
        "no-undef": "off"
      }
    }
  ],
  "plugins": [
    "html",
    "import",
    "vue",
    "typescript"
  ],
  "rules": {
    "no-param-reassign": 0,
    "consistent-return": 0,
    "func-names": 0,
    "no-console": 0,
    "no-shadow": 0,
    "radix": 0,
    "no-constant-condition": 0,
    "max-len": 1,
    "no-plusplus": 1,
    "no-restricted-syntax": 1,
    "no-continue": 1,
    "import/order": 0,
    "quotes": [
      1,
      "single"
    ]
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  }
}
